---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import hero from "../assets/hero.jpg";
import heroVideo from "../assets/hero.mp4";
---

<Layout>
  <div class="relative flex justify-center items-center h-[80vh]">
    <h1 class="relative z-10 text-[26vw] font-black text-white">Aurora</h1>
    <!-- <Image src={hero} alt="hero aurora" class="bg-image" /> -->
    <video autoplay muted loop class="bg-video">
      <source src={heroVideo} type="video/mp4" />
    </video>
  </div>
</Layout>

<style>
  .bg-image {
    width: 100%;
    height: 80vh;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    object-fit: cover;
  }
  .bg-video {
    width: 100%;
    height: 80vh;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    object-fit: cover;
  }
</style>
